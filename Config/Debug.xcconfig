// Debug.xcconfig
// Configuration for local development and debugging

#include "Shared.xcconfig"

// ============================================================================
// ENVIRONMENT SETTINGS
// ============================================================================

// TODO: Replace with your actual debug/staging API URL
API_BASE_URL = https://api-staging.yourapp.com

// Environment identifier
APP_ENVIRONMENT = debug

// Feature flags for debug builds
ENABLE_DEBUG_MENU = YES
ENABLE_LOGGING = YES
ENABLE_MOCK_DATA = YES

// Subscription behavior - auto-subscribe for QA testing
ENABLE_AUTO_SUBSCRIBE = YES

// ============================================================================
// BUILD SETTINGS - DEBUG
// ============================================================================

// Optimization
GCC_OPTIMIZATION_LEVEL = 0
SWIFT_OPTIMIZATION_LEVEL = -Onone

// Debug information
DEBUG_INFORMATION_FORMAT = dwarf
ENABLE_TESTABILITY = YES
ONLY_ACTIVE_ARCH = YES

// Assertions enabled
ENABLE_NS_ASSERTIONS = YES
GCC_PREPROCESSOR_DEFINITIONS = $(inherited) DEBUG=1

// Swift active compilation conditions
SWIFT_ACTIVE_COMPILATION_CONDITIONS = $(inherited) DEBUG
